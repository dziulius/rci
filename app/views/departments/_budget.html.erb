<%= label_tag :project_id, t('departments.budget.project') %>
<%= select_tag :project_id, options_for_select([[]] + @department.projects.collect {|d| [d.name, d.id] }), :action => budgets_path(:format => 'js') %>

<div id="budgets">
  <%= render :partial => 'budgets_table' %>
</div>

<script type="text/javascript">
  $(function() {
    $("#project_id").change(function() {
      var val = $(this).val();
      if (val) {
        $('#budgets').load($(this).attr('action'), "project_id=" + val);
      }
    });
  });
</script>
