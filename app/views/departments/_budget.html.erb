<% form_tag send(:department_budgets_path, @department, :format => 'js'), :id => 'budgets_form' do %>
  <%= label_tag :project_id, t('departments.budget.project') %>
  <%= select_tag :project_id, options_for_select([[]] + @department.projects.collect {|d| [d.name, d.id] }) %>
<% end %>

<div id="budgets">
  <%= render :partial => 'budgets_table' %>
</div>

<script type="text/javascript">
  $(function() {
    $("#project_id").change(function() {
      var val = $("option:selected", this).val();
      if (val) {
        $('#budgets').load($('#budgets_form').attr('action'), "project_id="+val);
      }
    });
  });
</script>
